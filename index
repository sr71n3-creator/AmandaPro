        // Estado do aplicativo
        let user = null;
        let currentDate = new Date();
        let currentDay = currentDate.getDay(); // 0 = Domingo, 1 = Segunda, etc.
        let currentMotivationIndex = currentDate.getDate() % dailyMotivations.length;

        // Elementos DOM
        const loginScreen = document.getElementById('loginScreen');
        const app = document.getElementById('app');
        const googleLoginBtn = document.getElementById('googleLogin');
        const logoutBtn = document.getElementById('logoutBtn');
        const userInfo = document.getElementById('userInfo');
        const userName = document.getElementById('userName');
        const userAvatar = document.getElementById('userAvatar');
        const currentDateEl = document.getElementById('currentDate');
        const trainingWeek = document.getElementById('trainingWeek');
        const warriorDashboard = document.getElementById('warriorDashboard');
        const dailyMotivation = document.getElementById('dailyMotivation');
        const motivationDate = document.getElementById('motivationDate');
        const notification = document.getElementById('notification');
        const notificationText = document.getElementById('notificationText');
        const dataTabs = document.querySelectorAll('.data-tab');
        const dataContents = document.querySelectorAll('.data-content');

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar data atual
            updateDate();
            
            // Carregar motivação do dia
            updateMotivation();
            
            // Carregar treino semanal
            loadTrainingWeek();
            
            // Carregar warrior dashboard
            loadWarriorDashboard();
            
            // Calcular macros iniciais
            calculateMacros();
            
            // Configurar tabs
            setupTabs();
            
            // Configurar eventos de nutrição
            document.getElementById('athleteWeight').addEventListener('input', calculateMacros);
            document.getElementById('proteinRatio').addEventListener('change', calculateMacros);
            document.getElementById('calorieSurplus').addEventListener('change', calculateMacros);
            
            // Verificar se há usuário salvo (simulação)
            const savedUser = localStorage.getItem('fitnessUser');
            if (savedUser) {
                user = JSON.parse(savedUser);
                showApp();
            }
            
            // Configurar eventos
            googleLoginBtn.addEventListener('click', loginWithGoogle);
            logoutBtn.addEventListener('click', logout);
        });

        // Funções do aplicativo
        function updateDate() {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            currentDateEl.textContent = currentDate.toLocaleDateString('pt-BR', options).toUpperCase();
            
            // Atualizar data da motivação
            const motivationDateOptions = { weekday: 'long', day: 'numeric', month: 'long' };
            motivationDate.textContent = currentDate.toLocaleDateString('pt-BR', motivationDateOptions);
        }

        function loadTrainingWeek() {
            trainingWeek.innerHTML = '';
            
            // Determinar dia atual
            const today = new Date().getDay();
            
            for (let i = 0; i <= 6; i++) {
                const dayData = weeklyTraining[i];
                const isActive = i === today;
                const isCompleted = i < today || (i === today && dayData.status === 'completed');
                
                const dayCard = document.createElement('div');
                dayCard.className = `day-card ${isActive ? 'active' : ''}`;
                dayCard.innerHTML = `
                    <div class="day-header">
                        <div class="day-name">${dayData.day}</div>
                        <div class="day-status ${isCompleted ? 'completed' : isActive ? 'active' : ''}"></div>
                    </div>
                    <div class="muscle-groups">
                        ${dayData.muscleGroups.map(group => 
                            `<span class="muscle-tag">${group}</span>`
                        ).join('')}
                    </div>
                    <ul class="exercises-list">
                        ${dayData.exercises.slice(0, 4).map(exercise => `
                            <li class="exercise-item">
                                <span class="exercise-name">${exercise.name}</span>
                                <span class="exercise-sets">${exercise.sets}</span>
                            </li>
                        `).join('')}
                        ${dayData.exercises.length > 4 ? 
                            `<li class="exercise-item" style="color: var(--accent-pink); font-size: 0.9rem;">
                                + ${dayData.exercises.length - 4} exercícios
                            </li>` : ''
                        }
                    </ul>
                `;
                
                trainingWeek.appendChild(dayCard);
            }
        }

        function loadWarriorDashboard() {
            warriorDashboard.innerHTML = '';
            
            warriorItems.forEach(item => {
                const itemElement = document.createElement('div');
                itemElement.className = `warrior-item ${item.completed ? 'completed' : ''}`;
                itemElement.innerHTML = `
                    <div class="warrior-header">
                        <div class="warrior-title">
                            <i class="${item.icon}"></i>
                            <span>${item.name}</span>
                        </div>
                        <div class="warrior-progress">
                            <div class="progress-circle ${item.progress === 100 ? 'completed' : ''}">
                                <span class="progress-text">${item.progress}%</span>
                            </div>
                        </div>
                    </div>
                    <p style="color: #aaa; font-size: 0.85rem; margin-bottom: 15px;">${item.description}</p>
                    ${item.metrics.map(metric => `
                        <div class="warrior-metric">
                            <span class="metric-name">${metric.name}</span>
                            <div>
                                <span class="metric-value">${metric.value}</span>
                                <span class="metric-target"> / ${metric.target}</span>
                            </div>
                        </div>
                    `).join('')}
                `;
                
                // Adicionar evento de clique para marcar como completo
                itemElement.addEventListener('click', function() {
                    item.completed = !item.completed;
                    item.progress = item.completed ? 100 : Math.max(item.progress - 20, 0);
                    loadWarriorDashboard();
                    showNotification(`${item.name} ${item.completed ? 'completado!' : 'reaberto!'}`);
                });
                
                warriorDashboard.appendChild(itemElement);
            });
        }

        function updateMotivation() {
            dailyMotivation.textContent = dailyMotivations[currentMotivationIndex];
        }

        function calculateMacros() {
            const weight = parseFloat(document.getElementById('athleteWeight').value) || 68.5;
            const proteinRatio = parseFloat(document.getElementById('proteinRatio').value);
            const calorieSurplus = parseInt(document.getElementById('calorieSurplus').value);
            
            // Cálculos baseados em atleta bikini
            const protein = Math.round(weight * proteinRatio);
            const baseCalories = weight * 35; // Método simplificado para atleta ativa
            const calories = Math.round(baseCalories + calorieSurplus);
            const carbs = Math.round((calories * 0.45) / 4); // 45% de carbs
            const fats = Math.round((calories * 0.25) / 9); // 25% de gorduras
            
            const macroResult = document.getElementById('macroResult');
            macroResult.innerHTML = `
                <div class="macro-box">
                    <div class="macro-value">${calories}</div>
                    <div class="macro-label">Calorias</div>
                </div>
                <div class="macro-box">
                    <div class="macro-value">${protein}g</div>
                    <div class="macro-label">Proteína</div>
                </div>
                <div class="macro-box">
                    <div class="macro-value">${carbs}g</div>
                    <div class="macro-label">Carboidratos</div>
                </div>
                <div class="macro-box">
                    <div class="macro-value">${fats}g</div>
                    <div class="macro-label">Gorduras</div>
                </div>
            `;
        }

        function setupTabs() {
            dataTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Remover classe active de todas as tabs e contents
                    dataTabs.forEach(t => t.classList.remove('active'));
                    dataContents.forEach(c => c.classList.remove('active'));
                    
                    // Adicionar classe active à tab clicada
                    this.classList.add('active');
                    
                    // Mostrar content correspondente
                    document.getElementById(`${tabId}Content`).classList.add('active');
                });
            });
        }

        // Simulação de login com Google
        function loginWithGoogle() {
            // Simulação - em um app real, integraria com Firebase Auth
            user = {
                name: "AMANDA",
                email: "amanda.bikini@example.com",
                avatar: "https://randomuser.me/api/portraits/women/44.jpg"
            };
            
            // Salvar no localStorage (simulação)
            localStorage.setItem('fitnessUser', JSON.stringify(user));
            localStorage.setItem('fitnessData', JSON.stringify({
                lastLogin: new Date().toISOString(),
                phase: "bulking",
                competitionDate: "2024-03-30",
                category: "Bikini"
            }));
            
            // Mostrar app
            showApp();
        }

        function showApp() {
            loginScreen.classList.add('hidden');
            app.classList.remove('hidden');
            
            // Atualizar informações do usuário
            if (user) {
                userName.textContent = user.name;
                userAvatar.src = user.avatar;
                userInfo.classList.remove('hidden');
            }
            
            // Mostrar notificação de boas-vindas
            showNotification(`Bem-vinda, ${user.name}! Foco no bulking de qualidade para Março!`);
        }

        function logout() {
            user = null;
            localStorage.removeItem('fitnessUser');
            app.classList.add('hidden');
            loginScreen.classList.remove('hidden');
        }

        function showNotification(message) {
            notificationText.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Funções de salvamento de dados
        function saveNutritionData() {
            const nutritionData = {
                weight: document.getElementById('athleteWeight').value,
                proteinRatio: document.getElementById('proteinRatio').value,
                calorieSurplus: document.getElementById('calorieSurplus').value,
                water: document.getElementById('waterIntake').value,
                meals: document.getElementById('mealsCompleted').value,
                carbTiming: document.getElementById('carbTiming').value,
                foodQuality: document.getElementById('foodQuality').value,
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('nutritionData', JSON.stringify(nutritionData));
            showNotification('Dados nutricionais salvos! Continua no caminho certo!');
            
            // Atualizar warrior dashboard
            updateWarriorItemProgress(1, 95); // Proteína
            updateWarriorItemProgress(2, 90); // Carbo
            updateWarriorItemProgress(0, 85); // Água
        }

        function saveMeasuresData() {
            const measuresData = {
                weight: document.getElementById('weight').value,
                bodyFat: document.getElementById('bodyFat').value,
                arm: document.getElementById('arm').value,
                chest: document.getElementById('chest').value,
                waist: document.getElementById('waist').value,
                hip: document.getElementById('hip').value,
                thigh: document.getElementById('thigh').value,
                calf: document.getElementById('calf').value,
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('measuresData', JSON.stringify(measuresData));
            showNotification('Medidas salvas! Cada centímetro conta para o palco!');
        }

        function saveHormoneData() {
            const hormoneData = {
                type: document.getElementById('hormoneType').value,
                dose: document.getElementById('hormoneDose').value,
                time: document.getElementById('hormoneTime').value,
                site: document.getElementById('applicationSite').value,
                week: document.getElementById('cycleWeek').value,
                sideEffects: document.getElementById('sideEffects').value,
                nextBloodwork: document.getElementById('nextBloodwork').value,
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('hormoneData', JSON.stringify(hormoneData));
            showNotification('Registro de hormonização salvo! Segurança em primeiro lugar!');
            updateWarriorItemProgress(4, 100); // Hormonização
        }

        function saveSupplementData() {
            const supplementData = {
                taken: Array.from(document.getElementById('supplementsTaken').selectedOptions).map(opt => opt.value),
                notes: document.getElementById('supplementNotes').value,
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('supplementData', JSON.stringify(supplementData));
            showNotification('Suplementação registrada! O chá vai fazer maravilhas! ✨');
            updateWarriorItemProgress(5, 95); // Suplementos
        }

        function saveSleepData() {
            const sleepData = {
                hours: document.getElementById('sleepHours').value,
                quality: document.getElementById('sleepQuality').value,
                sleepTime: document.getElementById('sleepTime').value,
                wakeTime: document.getElementById('wakeTime').value,
                restDays: document.getElementById('restDays').value,
                stress: document.getElementById('stressLevel').value,
                activities: Array.from(document.getElementById('recoveryActivities').selectedOptions).map(opt => opt.value),
                timestamp: new Date().toISOString()
            };
            
            localStorage.setItem('sleepData', JSON.stringify(sleepData));
            showNotification('Dados de recuperação salvos! O descanso é seu superpoder!');
            updateWarriorItemProgress(6, 90); // Sono
            updateWarriorItemProgress(7, 85); // Recuperação
        }

        function updateWarriorItemProgress(itemId, newProgress) {
            const item = warriorItems.find(item => item.id === itemId);
            if (item) {
                item.progress = newProgress;
                item.completed = newProgress === 100;
                loadWarriorDashboard();
            }
        }

        // Atualização automática diária
        setInterval(() => {
            const now = new Date();
            if (now.getDate() !== currentDate.getDate()) {
                currentDate = now;
                currentDay = now.getDay();
                currentMotivationIndex = currentDate.getDate() % dailyMotivations.length;
                
                updateDate();
                updateMotivation();
                loadTrainingWeek();
                
                // Resetar alguns itens do dashboard (exceto os que são cumulativos)
                warriorItems.forEach(item => {
                    if (item.id !== 4 && item.id !== 5) { // Mantém treino e hormonização
                        item.progress = Math.max(item.progress - 15, 0);
                        item.completed = false;
                    }
                });
                
                loadWarriorDashboard();
                showNotification("Novo dia! Mais uma chance para evoluir! 🌟");
            }
        }, 60000); // Verificar a cada minuto

        // Adicionar funcionalidade PWA
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js').then(registration => {
                    console.log('ServiceWorker registrado: ', registration);
                }).catch(registrationError => {
                    console.log('Falha no registro: ', registrationError);
                });
            });
        }

        // Inicializar valores padrão
        window.onload = function() {
            // Configurar data para próximo exame de sangue (30 dias a partir de hoje)
            const nextBloodwork = new Date();
            nextBloodwork.setDate(nextBloodwork.getDate() + 30);
            document.getElementById('nextBloodwork').value = nextBloodwork.toISOString().split('T')[0];
        };
    </script>
</body>
</html>
